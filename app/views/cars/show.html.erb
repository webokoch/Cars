
<h3> <%= @car.model %> </h3>

<h5>Color <%= @car.color %> </h5>

<h5>Mileage <%= @car.mileage %> km</h5>

<h5>Built in <%= @car.year %> </h5>

<p id="notice"><%= notice %></p>

<%= link_to edit_car_path do %>
  <h3>Update <%= @car.model %> </h3>
<% end %>

<%= link_to car_path(@car), method: :delete, data: {
  confirm: "Do you really want to delete this car?" } do %>
  <h3>Delete <%= @car.model %></h3>
<% end %>

<h3><%= link_to 'Back to all cars', cars_path, class: 'btn-lg btn-success'  %></h3>
